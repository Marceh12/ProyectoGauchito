<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <script src="https://kit.fontawesome.com/6c2885ab71.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet"> 
    <title>Gauchito Git</title>
</head>

    <header>
        <%- include ('./partials/header')%>
    </header>

    <body class="body-products">
            <section class="cont-body-inside">
                <% products.forEach(function(product){ %>
                    <div class="card-products">
                        <img class= "images-products" src="/images/<%= product.image %>" alt="image">
                            <div class="intro">
                                <a href="/products/detail/<%= product.id %>" class="link-detalle-prod"><%= product.name %></a>
                            </div>
                                <label><span class="precio">$<%= product.price %></span></label>
                                
                                <br />
                                <!-- <button class = "button-agregar">AGREGAR</button> -->
                    </div>
                <% }) %> 
            </section>
        
            
                <%- include ('./partials/footer')%>
            

        </body>
</html>